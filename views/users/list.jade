extends ../layouts/anima_layout.jade

block content
    .row.content
        h1
            i.fa.fa-user
            |People Directory

        ul.letter-list
            each letter in ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z']
                li
                    a(href="/users/filter/#{letter}") #{letter}


        ul.small-block-grid-1.medium-block-grid-2.large-block-grid-3
            each user in users
                li
                    .people-item
                        a.left(href="/users/#{user._id}")
                            img.user-thumbnail(alt="110x110" src="data:image/png;base64," data-src="holder.js/110x110" style="width: 110px; height: 110px;")

                        .media-body
                            h4.person-name
                                a(href="/users/#{user._id}") #{user.name}

                            ul.inline-list.social-list
                                li
                                    a.tooltips(href="" data-toggle="tooltip" data-original-title="Email")
                                        i.fa.fa-envelope-o